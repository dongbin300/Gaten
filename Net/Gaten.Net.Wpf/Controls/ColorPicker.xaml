                    </Canvas>
                </Border>
            </Grid>
        </Border>
        <Border Margin="0,3,0,27" BorderThickness="0,1,1,1" BorderBrush="#FF333333" x:Name="_ColorSelectorUnit" Width="22" HorizontalAlignment="Right" MouseMove="ColorSelectorUnit_MouseMove" PreviewMouseLeftButtonDown="ColorSelectorUnit_PreviewMouseLeftButtonDown" PreviewMouseLeftButtonUp="ColorSelectorUnit_PreviewMouseLeftButtonUp" MouseEnter="ColorSelectorUnit_MouseEnter">
            <Grid x:Name="_colorSelector" Width="Auto" Height="Auto" ClipToBounds="True">
                <Path Fill="#FF000000" Stretch="Fill" StrokeThickness="0" Margin="0,-4,0,0" x:Name="_stylus" VerticalAlignment="Top" Height="8" Data="M20.976,0 L20.976,7 14.976,3.4999998 z M0.00024036384,0 L6,3.4999993 0,7 z"/>

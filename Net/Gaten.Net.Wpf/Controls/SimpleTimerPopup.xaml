<Window x:Class="Gaten.Net.Wpf.Controls.SimpleTimerPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="Manual" WindowStyle="None" ResizeMode="NoResize" Topmost="True" ShowInTaskbar="False"
        AllowsTransparency="True" Height="20" Width="200">

    <Border x:Name="PopupBorder" Background="#E1E1E1" Opacity="0.5">
        <TextBlock x:Name="PopupText" Foreground="Black" TextAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
    </Border>
</Window>

<Window x:Class="Gaten.Audio.WavCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gaten.Audio.WavCreator"
        mc:Ignorable="d"
        Title="Wav Creator" Height="120" Width="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Freq(Hz)"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Duration(s)"/>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Volume"/>

        <TextBox Grid.Row="0" Grid.Column="1" x:Name="FreqTextBox"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="DurationTextBox"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="VolumeTextBox"/>

        <Button Grid.Row="3" Grid.ColumnSpan="2" x:Name="CreateButton" Content="Create" Click="CreateButton_Click"/>
    </Grid>
</Window>

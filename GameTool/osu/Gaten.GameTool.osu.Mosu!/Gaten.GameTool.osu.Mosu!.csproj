<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net7.0-windows</TargetFramework>
		<RootNamespace>Gaten.GameTool.osu.Mosu_</RootNamespace>
		<Nullable>enable</Nullable>
		<UseWPF>true</UseWPF>
		<UseWindowsForm>true</UseWindowsForm>
		<AssemblyName>Mosu!</AssemblyName>
		<ApplicationIcon>Resources\osu_icon_gray.ico</ApplicationIcon>
	</PropertyGroup>

	<ItemGroup>
	  <None Remove="Resources\lame.exe" />
	  <None Remove="Resources\lame_enc.dll" />
	  <None Remove="Resources\mp3stretch.bat" />
	  <None Remove="Resources\osu_icon.png" />
	  <None Remove="Resources\osu_icon_gray.ico" />
	  <None Remove="Resources\osu_icon_gray.png" />
	  <None Remove="Resources\soundstretch.exe" />
	  <None Remove="Resources\wavstretch.bat" />
	</ItemGroup>

	<ItemGroup>
	  <Content Include="Resources\osu_icon_gray.ico" />
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="Microsoft-WindowsAPICodePack-Shell" Version="1.1.4" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\..\Net\GameRule\Gaten.Net.GameRule.osu\Gaten.Net.GameRule.osu.csproj" />
		<ProjectReference Include="..\..\..\Net\Gaten.Net.Wpf\Gaten.Net.Wpf.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <Resource Include="Resources\lame.exe">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Resource>
	  <Resource Include="Resources\lame_enc.dll">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Resource>
	  <Resource Include="Resources\mp3stretch.bat">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Resource>
	  <Resource Include="Resources\osu_icon.png">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Resource>
	  <Resource Include="Resources\osu_icon_gray.ico">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </Resource>
	  <Resource Include="Resources\osu_icon_gray.png">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Resource>
	  <Resource Include="Resources\soundstretch.exe">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Resource>
	  <Resource Include="Resources\wavstretch.bat">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Resource>
	</ItemGroup>

	<ItemGroup>
	  <Compile Update="Settings.Designer.cs">
	    <DesignTimeSharedInput>True</DesignTimeSharedInput>
	    <AutoGen>True</AutoGen>
	    <DependentUpon>Settings.settings</DependentUpon>
	  </Compile>
	</ItemGroup>

	<ItemGroup>
	  <None Update="Settings.settings">
	    <Generator>SettingsSingleFileGenerator</Generator>
	    <LastGenOutput>Settings.Designer.cs</LastGenOutput>
	  </None>
	</ItemGroup>

</Project>

<Window x:Class="Gaten.Web.Tools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gaten.Web.Tools"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="350" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Margin="30,0,0,0" VerticalAlignment="Bottom" Text="Tarinance" FontSize="24" FontFamily="Verdana"/>
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="3, 15">
            <Button x:Name="ContainerRefreshButton" Content="docker 컨테이너 적용" Height="35" Click="ContainerRefreshButton_Click"/>
        </StackPanel>
        <TextBox Grid.Row="2" x:Name="LogTextBox" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" Height="Auto" FontSize="11" FontFamily="Verdana"/>
    </Grid>
</Window>

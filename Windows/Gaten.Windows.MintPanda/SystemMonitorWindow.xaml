<Window x:Class="Gaten.Windows.MintPanda.SystemMonitorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gaten.Windows.MintPanda"
        mc:Ignorable="d"
        Deactivated="Window_Deactivated"
        WindowStyle="None" AllowsTransparency="True" Topmost="True" Background="Transparent"
        ShowInTaskbar="False"
        Title="SystemMonitorWindow" Width="200" Height="300">
    <Border BorderBrush="Red" BorderThickness="0">
        <Grid Background="Transparent">
            <Canvas Width="200" Height="300">
                <TextBlock x:Name="SystemInfoText1" FontSize="11" Canvas.Top="2" Canvas.Left="10" Foreground="Black"/>
                <TextBlock x:Name="SystemInfoText2" FontSize="11" Canvas.Top="2" Canvas.Left="12" Foreground="Black"/>
                <TextBlock x:Name="SystemInfoText3" FontSize="11" Canvas.Top="4" Canvas.Left="10" Foreground="Black"/>
                <TextBlock x:Name="SystemInfoText4" FontSize="11" Canvas.Top="4" Canvas.Left="12" Foreground="Black"/>
                <TextBlock x:Name="SystemInfoText5" FontSize="11" Canvas.Top="3" Canvas.Left="11" Foreground="White"/>
            </Canvas>
        </Grid>
    </Border>
</Window>

<Window x:Class="Gaten.Windows.MintPanda.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gaten.Windows.MintPanda"
        xmlns:wpf="clr-namespace:Gaten.Net.Wpf.Controls;assembly=Gaten.Net.Wpf"
        mc:Ignorable="d"
        Title="Mint Panda" Height="100" Width="100" Icon="/MintPanda;component/Resources/Images/panda.ico"
        WindowStyle="None" WindowStartupLocation="Manual" ShowInTaskbar="False"
        Loaded="Window_Loaded" Closing="Window_Closing" Topmost="True" MinWidth="100" AllowsTransparency="True"
        MouseEnter="Window_MouseEnter"
        MouseLeave="Window_MouseLeave"
        MouseDown="Window_MouseDown"
        KeyDown="Window_KeyDown">
    <Window.Resources>
        <SolidColorBrush x:Key="MainColor" Color="#00FFC0" Opacity="0.8"/>
    </Window.Resources>


    <Grid x:Name="MainGrid">
        <ContentControl x:Name="control"/>
    </Grid>
</Window>
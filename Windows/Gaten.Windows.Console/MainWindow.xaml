<Window x:Class="Gaten.Windows.Console.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gaten.Windows.Console"
        mc:Ignorable="d"
        WindowState="Maximized" WindowStyle="None"
        Title="MintChoco Console" Height="600" Width="800" 
        Background="#151515" Foreground="#ddd"
        Loaded="Window_Loaded">
    <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto" FontSize="16" FontFamily="Consolas">
        <StackPanel x:Name="panel" Orientation="Vertical">
        </StackPanel>
    </ScrollViewer>
</Window>

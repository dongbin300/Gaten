                <Button Width="36" Margin="2" Grid.Row="2" Grid.Column="2" x:Name="Button_n6" Content="6" Click="Button_Click"/>
                <Button Width="36" Margin="2" Grid.Row="3" Grid.Column="0" x:Name="Button_n1" Content="1" Click="Button_Click"/>
                <Button Width="36" Margin="2" Grid.Row="3" Grid.Column="1" x:Name="Button_n2" Content="2" Click="Button_Click"/>
                <Button Width="36" Margin="2" Grid.Row="3" Grid.Column="2" x:Name="Button_n3" Content="3" Click="Button_Click"/>
                <Button Width="36" Margin="2" Grid.Row="3" Grid.Column="3" x:Name="Button_nEnter" Content="Ent" Click="Button_Click" Grid.RowSpan="2"/>
                <Button Width="76" Margin="2" Grid.Row="4" Grid.Column="0" x:Name="Button_n0" Content="0" Click="Button_Click" Grid.ColumnSpan="2"/>

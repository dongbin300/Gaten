                    <Button Width="36" Margin="2" x:Name="Button_i" Content="I" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_o" Content="O" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_p" Content="P" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_open" Content="[ {" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_close" Content="] }" Click="Button_Click"/>
                    <Button Width="56" Margin="2" x:Name="Button_or" Content="\ |" Click="Button_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="40">
                    <Button Width="68" Margin="2" x:Name="Button_capsLock" Content="CapsLock" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_a" Content="A" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_s" Content="S" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_d" Content="D" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_f" Content="F" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_g" Content="G" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_h" Content="H" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_j" Content="J" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_k" Content="K" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_l" Content="L" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_colon" Content="; :" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_quote" Content="' &quot;" Click="Button_Click"/>
                    <Button Width="84" Margin="2" x:Name="Button_enter" Content="Enter" Click="Button_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="40">
                    <Button Width="88" Margin="2" x:Name="Button_leftShift" Content="Shift" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_z" Content="Z" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_x" Content="X" Click="Button_Click"/>

                <Button Width="36" Margin="2" Grid.Row="1" Grid.Column="2" x:Name="Button_n9" Content="9" Click="Button_Click"/>
                <Button Width="36" Margin="2" Grid.Row="1" Grid.Column="3" x:Name="Button_add" Content="+" Click="Button_Click" Grid.RowSpan="2"/>
                <Button Width="36" Margin="2" Grid.Row="2" Grid.Column="0" x:Name="Button_n4" Content="4" Click="Button_Click"/>

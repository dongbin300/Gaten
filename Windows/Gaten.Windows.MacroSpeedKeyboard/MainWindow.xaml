            </Grid.ColumnDefinitions>

            <UniformGrid Grid.Column="0" Columns="4" Rows="3">
                <ToggleButton x:Name="KeyButton1" FontSize="14" Content="KEY 1&#x0a;" Style="{StaticResource NeonToggleButton}"/>

                <ToggleButton x:Name="KeyButton3" FontSize="14" Content="KEY 3&#x0a;" Style="{StaticResource NeonToggleButton}"/>
                <ToggleButton x:Name="KeyButton4" FontSize="14" Content="KEY 4&#x0a;" Style="{StaticResource NeonToggleButton}"/>
                <ToggleButton x:Name="KeyButton5" FontSize="14" Content="KEY 5&#x0a;" Style="{StaticResource NeonToggleButton}"/>
                <ToggleButton x:Name="KeyButton6" FontSize="14" Content="KEY 6&#x0a;" Style="{StaticResource NeonToggleButton}"/>
                <ToggleButton x:Name="KeyButton7" FontSize="14" Content="KEY 7&#x0a;" Style="{StaticResource NeonToggleButton}"/>
                <ToggleButton x:Name="KeyButton8" FontSize="14" Content="KEY 8&#x0a;" Style="{StaticResource NeonToggleButton}"/>
                <ToggleButton x:Name="KeyButton9" FontSize="14" Content="KEY 9&#x0a;" Style="{StaticResource NeonToggleButton}"/>
                <ToggleButton x:Name="KeyButton10" FontSize="14" Content="KEY 10&#x0a;" Style="{StaticResource NeonToggleButton}"/>
                <ToggleButton x:Name="KeyButton11" FontSize="14" Content="KEY 11&#x0a;" Style="{StaticResource NeonToggleButton}"/>
                <ToggleButton x:Name="KeyButton12" FontSize="14" Content="KEY 12&#x0a;" Style="{StaticResource NeonToggleButton}"/>
            </UniformGrid>
            <UniformGrid Grid.Column="1" Columns="3" Rows="2">
                <ToggleButton x:Name="KnobLeftButton1" FontSize="14" Content="Knob 1 Left&#x0a;" Style="{StaticResource NeonToggleButton}"/>
                <ToggleButton x:Name="KnobClickButton1" FontSize="14" Content="Knob 1 Click&#x0a;" Style="{StaticResource NeonToggleButton}"/>
                <ToggleButton x:Name="KnobRightButton1" FontSize="14" Content="Knob 1 Right&#x0a;" Style="{StaticResource NeonToggleButton}"/>
                <ToggleButton x:Name="KnobLeftButton2" FontSize="14" Content="Knob 2 Left&#x0a;" Style="{StaticResource NeonToggleButton}"/>
                <ToggleButton x:Name="KnobClickButton2" FontSize="14" Content="Knob 2 Click&#x0a;" Style="{StaticResource NeonToggleButton}"/>
                <ToggleButton x:Name="KnobRightButton2" FontSize="14" Content="Knob 2 Right&#x0a;" Style="{StaticResource NeonToggleButton}"/>
            </UniformGrid>
            <StackPanel Grid.Column="2">
                <TextBlock x:Name="ConnectionText" FontSize="14"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="KeyCombinationTextBox" IsReadOnly="True" Grid.Column="0"/>
            <Button x:Name="DownloadButton" Grid.Column="1" Content="Download" Click="DownloadButton_Click"/>
            <Button x:Name="ResetButton" Grid.Column="2" Content="Reset" Click="ResetButton_Click"/>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>

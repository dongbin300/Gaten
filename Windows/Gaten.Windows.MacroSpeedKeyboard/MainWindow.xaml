                    <Button Width="104" Margin="2" x:Name="Button_rightShift" Content="Shift" Click="Button_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="40">
                    <Button Width="48" Margin="2" x:Name="Button_leftCtrl" Content="Ctrl" Click="Button_Click"/>
                    <Button Width="48" Margin="2" x:Name="Button_win" Content="Win" Click="Button_Click"/>
                    <Button Width="48" Margin="2" x:Name="Button_leftAlt" Content="Alt" Click="Button_Click"/>
                    <Button Width="232" Margin="2" x:Name="Button_spacebar" Content="Space" Click="Button_Click"/>
                    <Button Width="48" Margin="2" x:Name="Button_rightAlt" Content="Alt" Click="Button_Click"/>
                    <Button Width="48" Margin="2" x:Name="Button_fn" Content="Fn" Click="Button_Click"/>
                    <Button Width="48" Margin="2" x:Name="Button_menu" Content="Menu" Click="Button_Click"/>
                    <Button Width="48" Margin="2" x:Name="Button_rightCtrl" Content="Ctrl" Click="Button_Click"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal">
                <Button Width="36" Margin="2" x:Name="Button_printScreen" Content="Prt" Click="Button_Click"/>
                <Button Width="36" Margin="2" x:Name="Button_scrollLock" Content="Scr" Click="Button_Click"/>
                <Button Width="36" Margin="2" x:Name="Button_pauseBreak" Content="Pau" Click="Button_Click"/>
            </StackPanel>
            <UniformGrid Grid.Row="2" Grid.Column="2" Columns="3" Rows="5">
                <Button Width="36" Margin="2" x:Name="Button_insert" Content="Ins" Click="Button_Click"/>
                <Button Width="36" Margin="2" x:Name="Button_home" Content="Hm" Click="Button_Click"/>
                <Button Width="36" Margin="2" x:Name="Button_pageUp" Content="Pup" Click="Button_Click"/>
                <Button Width="36" Margin="2" x:Name="Button_delete" Content="Del" Click="Button_Click"/>
                <Button Width="36" Margin="2" x:Name="Button_end" Content="End" Click="Button_Click"/>
                <Button Width="36" Margin="2" x:Name="Button_pageDown" Content="Pdn" Click="Button_Click"/>
                <Button Width="36" Margin="2" x:Name="Button_TEMP4" Click="Button_Click" Visibility="Hidden"/>
                <Button Width="36" Margin="2" x:Name="Button_TEMP5" Click="Button_Click" Visibility="Hidden"/>
                <Button Width="36" Margin="2" x:Name="Button_TEMP6" Click="Button_Click" Visibility="Hidden"/>
                <Button Width="36" Margin="2" x:Name="Button_TEMP7" Click="Button_Click" Visibility="Hidden"/>

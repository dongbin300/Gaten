            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                <Button Width="36" Margin="2" x:Name="Button_esc" Content="ESC" Click="Button_Click"/>
                <Button Width="36" Margin="2" x:Name="Button_TEMP1" Visibility="Hidden"/>
                <Button Width="36" Margin="2" x:Name="Button_F1" Content="F1" Click="Button_Click"/>
                <Button Width="36" Margin="2" x:Name="Button_F2" Content="F2" Click="Button_Click"/>
                <Button Width="36" Margin="2" x:Name="Button_F3" Content="F3" Click="Button_Click"/>
                <Button Width="36" Margin="2" x:Name="Button_F4" Content="F4" Click="Button_Click"/>

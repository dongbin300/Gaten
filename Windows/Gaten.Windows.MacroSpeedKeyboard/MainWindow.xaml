                <Button Width="36" Margin="2" x:Name="Button_F12" Content="F12" Click="Button_Click"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Vertical">
                <StackPanel Orientation="Horizontal" Height="40">
                    <Button Width="36" Margin="2" x:Name="Button_tilde" Content="` ~" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_1" Content="1 !" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_2" Content="2 @" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_3" Content="3 #" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_4" Content="4 $" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_5" Content="5 %" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_6" Content="6 ^" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_7" Content="7 &amp;" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_8" Content="8 *" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_9" Content="9 (" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_0" Content="0 )" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_minus" Content="- _" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_plus" Content="= +" Click="Button_Click"/>
                    <Button Width="76" Margin="2" x:Name="Button_backspace" Content="←" Click="Button_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="40">
                    <Button Width="56" Margin="2" x:Name="Button_Tab" Content="Tab" Click="Button_Click"/>
                    <Button Width="36" Margin="2" x:Name="Button_q" Content="Q" Click="Button_Click"/>
